{
    "compilerOptions": {
        "outDir": ".",

        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",

        "declaration": true,
        
        "sourceMap": false,
        "inlineSourceMap": false,

        "experimentalDecorators": false,
        "alwaysStrict": true,

        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true
    },
    "files": [
        "src/index.ts"
    ]
}